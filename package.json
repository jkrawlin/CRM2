{
  "name": "employee-management-system",
  "version": "1.0.0",
  "description": "Employee Management System with Firebase",
  "scripts": {
    "deploy": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:all": "firebase deploy --only hosting,firestore:rules",
    "serve": "firebase serve",
    "build:css": "tailwindcss -c tailwind.config.cjs -i ./src/styles/tailwind.css -o ./assets/tailwind.css --minify",
    "dev:css": "tailwindcss -c tailwind.config.cjs -i ./src/styles/tailwind.css -o ./assets/tailwind.css --watch",
    "build": "npm run build:css"
  },
  "dependencies": {
    "firebase": "^10.7.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.12"
  }
}
