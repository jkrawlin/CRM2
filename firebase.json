{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "firebase-debug.log",
  "firestore.rules",
  "storage.rules",
      "**/.*",
      "**/node_modules/**",
      ".git/**",
      ".firebase/**",
      ".vscode/**",
      ".qodo/**",
      "src/**",
  "app.js",
  "styles.css",
      "postcss.config.cjs",
      "tailwind.config.cjs",
      "package*.json",
      "README.md"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
  ,
  "storage": {
    "rules": "storage.rules"
  }
}
